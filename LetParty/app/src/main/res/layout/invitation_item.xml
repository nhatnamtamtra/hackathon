<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/invitation_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/imgs"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/invitation_host"
            android:text="Host: test"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/invitation_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: test"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/invitation_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time: Saturday 10/10/2014"
            android:textSize="20sp"
            />
        s
    </LinearLayout>

</LinearLayout>